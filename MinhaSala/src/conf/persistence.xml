<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="MinhaSalaPU" transaction-type="RESOURCE_LOCAL">
    <class>br.recife.ifpe.edu.model.classes.Avaliacao</class>
    <class>br.recife.ifpe.edu.model.classes.ItemOferta</class>
    <class>br.recife.ifpe.edu.model.classes.ItemPedido</class>
    <class>br.recife.ifpe.edu.model.classes.Oferta</class>
    <class>br.recife.ifpe.edu.model.classes.Pedido</class>
    <class>br.recife.ifpe.edu.model.classes.Produto</class>
    <class>br.recife.ifpe.edu.model.classes.Usuario</class>
    <class>br.recife.ifpe.edu.model.classes.Aula</class>
    <class>br.recife.ifpe.edu.model.classes.Sala</class>
    <class>br.recife.ifpe.edu.model.classes.Equipamento</class>
    <class>br.recife.ifpe.edu.model.classes.ItemEquipamento</class>
    <class>br.recife.ifpe.edu.model.classes.ItemSala</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/minhasala?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="root"/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
